@model BasketItem

<form asp-controller="Basket" asp-action="Index">
    <section class="esh-basket-item esh-basket-item--middle col-lg-3 hidden-lg-down">
        <img class="esh-basket-image" src="@Model.PictureUrl" />
    </section>
    <section class="esh-basket-item esh-basket-item--middle col-xs-3">@Model.ProductName</section>
    <section class="esh-basket-item esh-basket-item--middle col-xs-2">$ @Model.UnitPrice.ToString("N2")</section>
    <section class="esh-basket-item esh-basket-item--middle col-xs-2">
        <input type="hidden" value="@Model.Id" />
        <input type="number" class="esh-basket-input" min="1" value="@Model.Quantity" />
    </section>
    <section class="esh-basket-item esh-basket-item--middle esh-basket-item--mark col-xs-2">$ @Math.Round(Model.Quantity * Model.UnitPrice, 2).ToString("N2")</section>
    <button class="btn esh-basket-checkout" name="updatebutton" value="" type="submit">[ Update ]</button>
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.ProductId" name="productId" />
    <input type="hidden" asp-for="@Model.ProductName" name="productName" />
    <input type="hidden" asp-for="@Model.Quantity" name="quantity" />
    <input type="hidden" asp-for="@Model.UnitPrice" name="unitPrice" />
    <input type="hidden" asp-for="@Model.OldUnitPrice" name="oldUnitPrice" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
</form>